<Window x:Class="QuoteMaster.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="QuoteMaster - Генератор цитат" Height="400" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#2C3E50">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Цитата -->
        <Border Grid.Row="0" Background="#34495E" CornerRadius="10" 
                BorderBrush="#1ABC9C" BorderThickness="2" Margin="0,0,0,20">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                <TextBlock x:Name="quoteText" TextWrapping="Wrap" 
                          FontSize="18" FontStyle="Italic"
                          Foreground="#ECF0F1" TextAlignment="Center"
                          VerticalAlignment="Center"/>
            </ScrollViewer>
        </Border>

        <!-- Автор -->
        <TextBlock x:Name="authorText" Grid.Row="1" 
                   HorizontalAlignment="Right" Margin="0,0,20,20"
                   FontSize="16" FontWeight="Bold" Foreground="#1ABC9C"
                   FontStyle="Italic"/>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Margin="0,0,0,10">
            <Button x:Name="newQuoteButton" Content="Новая цитата" 
                    Click="NewQuoteButton_Click"
                    Background="#1ABC9C" Foreground="White"
                    FontSize="14" FontWeight="Bold"
                    Padding="15,8" Margin="5" BorderThickness="0"
                    Cursor="Hand"/>

            <Button x:Name="copyButton" Content="Копировать" 
                    Click="CopyButton_Click"
                    Background="#3498DB" Foreground="White"
                    FontSize="14" FontWeight="Bold"
                    Padding="15,8" Margin="5" BorderThickness="0"
                    Cursor="Hand"/>
        </StackPanel>

        <!-- Кнопка выхода -->
        <Button Grid.Row="3" Content="Выход" Click="ExitButton_Click"
                Background="#E74C3C" Foreground="White"
                FontSize="12" Padding="10,5" 
                HorizontalAlignment="Right"
                BorderThickness="0" Cursor="Hand"/>
    </Grid>
</Window>