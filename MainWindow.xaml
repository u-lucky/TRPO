<Window x:Class="ISwearItsNoAi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ISwearItsNoAi - Главное меню" Height="651" Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid Background="#f0f0f0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок/Обьявление/Наименование/Название/Заголовочек/Текстовка/Эпитафияa -->
        <StackPanel Grid.Row="0" Background="#2C3E50" Margin="0,0,0,20">
            <TextBlock Text="ISwearItsNoAi" 
                       FontSize="28" FontWeight="Bold" 
                       HorizontalAlignment="Center" 
                       Margin="20,15" Foreground="White"/>
            <TextBlock Text="Система управления предприятиями" 
                       FontSize="14" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,15" Foreground="#BDC3C7"/>
        </StackPanel>

        <!-- кнопочки ситем бэу -->
        <Grid Grid.Row="1">
            <UniformGrid Columns="2" Rows="2" Margin="30" VerticalAlignment="Center">
                <Button Content="Учет рабочего времени" 
                        Click="OpenTimeTracking_Click" 
                        Margin="10" Height="70" 
                        FontSize="14" Background="#4CAF50" 
                        Foreground="White" FontWeight="SemiBold"/>
                <Button Content="Управление библиотекой" 
                        Click="OpenLibrary_Click" 
                        Margin="10" Height="70" 
                        FontSize="14" Background="#2196F3" 
                        Foreground="White" FontWeight="SemiBold"/>
                <Button Content="Планирование путешествий" 
                        Click="OpenTravel_Click" 
                        Margin="10" Height="70" 
                        FontSize="14" Background="#FF9800" 
                        Foreground="White" FontWeight="SemiBold"/>
                <Button Content="Бухгалтерский учет" 
                        Click="OpenAccounting_Click" 
                        Margin="10" Height="70" 
                        FontSize="14" Background="#9C27B0" 
                        Foreground="White" FontWeight="SemiBold"/>
            </UniformGrid>

            <!-- Обезьянка в правом нижнем углу -->
            <Image Source="C:\Users\user\Pictures\JasonStatham\Busymonkey.jpg" 
                   Width="180" Height="120"
                   HorizontalAlignment="Right" 
                   VerticalAlignment="Bottom"
                   Margin="0,0,20,20"
                   Stretch="Uniform"/>
        </Grid>

        <!-- То что внизу Foot -->
        <Border Grid.Row="2" Background="#34495E" Padding="10">
            <TextBlock Text="ISwearItsNoAi © 2025 - Все системы работают стабильно" 
                       Foreground="#ECF0F1" 
                       HorizontalAlignment="Center" 
                       FontSize="12"/>
        </Border>
    </Grid>
</Window>